{
  "compilerOptions": {

    "rootDir": "./src",
    "outDir": "./",

    "module": "nodenext",
    "target": "ES6",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    //"jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "app.ts", "src/index.ts", "src/index.ts"],
  "exclude": ["node_modules"],
}